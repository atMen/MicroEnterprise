<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_120"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_case_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/img_case" />

            <com.spring.chanba.views.SlantedTextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                app:slantedBackgroundColor="@color/word_db64"
                app:slantedLength="30dp"
                app:slantedMode="right"
                app:slantedText="成功案例"
                app:slantedTextColor="@color/white"
                app:slantedTextSize="@dimen/font_size_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_case_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            android:text="一个大咖的创业总结"
            android:textColor="@color/word_0000"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_case_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间：2018-09-20 22:30"
            android:textColor="@color/word_9999"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <View
        android:id="@+id/view_visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/color_eeee" />
</LinearLayout>
