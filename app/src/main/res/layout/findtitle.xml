<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/app_blue">


    <ImageView
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="10dip"
        android:layout_gravity="center"
        android:src="@mipmap/back_icon"
        />

    <com.newui.clearedittext.ClearEditText
        android:layout_marginLeft="5dp"
        android:id="@+id/filter_edit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="30dip"

        android:layout_gravity="center"
        android:background="@drawable/server_serch_bg"
        android:drawableLeft="@mipmap/search_gary_icon"
        android:drawablePadding="5dip"
        android:hint="请输入关键字"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textColor="@color/app_sub_text"
        android:textSize="15.0dip"/>

    <TextView
        android:id="@+id/ssbtn"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:background="@drawable/ss_btn_background"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="搜索"
        />


</LinearLayout>