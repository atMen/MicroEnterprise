<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 标签选中时的背景 -->
    <item android:state_selected="true">
        <shape>
            <corners android:radius="50dp" />
            <gradient android:endColor="#EB631F" android:startColor="#EB631F" />
        </shape>
    </item>
    <!-- 标签的正常背景 -->
    <item>
        <shape>
            <corners android:radius="60dp" />
            <!-- 圆角半径 -->
            <stroke android:width="1px" android:color="#8991A6" />
        </shape>
    </item>
</selector>