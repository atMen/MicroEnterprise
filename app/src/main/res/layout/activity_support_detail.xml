<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.newui.scrollview.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.tcrj.micro.view.MyTextViewXH
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:text="正在加载..."
                android:textColor="@color/app_title_text"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/app_blue2" />

            <com.tcrj.micro.view.MyTextViewXH
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/support_icon"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="20dip"
                android:singleLine="true"
                android:text="政策依据"
                android:textColor="@color/app_main_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:id="@+id/mattergist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:textColor="@color/app_sub_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/support_icon"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="20dip"
                android:singleLine="true"
                android:text="政策内容"
                android:textColor="@color/app_main_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:id="@+id/gkcondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:textColor="@color/app_sub_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/support_icon"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="20dip"
                android:singleLine="true"
                android:text="申请条件"
                android:textColor="@color/app_main_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:id="@+id/gkprocedure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:textColor="@color/app_sub_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/support_icon"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="20dip"
                android:singleLine="true"
                android:text="申请流程"
                android:textColor="@color/app_main_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:id="@+id/flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:textColor="@color/app_sub_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/support_icon"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="20dip"
                android:singleLine="true"
                android:text="提交材料"
                android:textColor="@color/app_main_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:id="@+id/timelimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:textColor="@color/app_sub_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/support_icon"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="20dip"
                android:singleLine="true"
                android:text="申请途径"
                android:textColor="@color/app_main_text"
                android:textSize="15sp" />

            <com.tcrj.micro.view.MyTextViewXH
                android:id="@+id/chargestandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text=""
                android:textColor="@color/app_sub_text"
                android:textSize="15sp" />


        </LinearLayout>
    </com.newui.scrollview.BounceScrollView>


</LinearLayout>