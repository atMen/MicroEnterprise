<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:background="@color/app_blue">


    <LinearLayout
        android:padding="10dp"
        android:id="@+id/ll_cs"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cityname"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全部"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/jt"
            />

    </LinearLayout>


    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_edittext_background"
        android:layout_toRightOf="@+id/ll_cs"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:layout_toRightOf="@+id/btnback"
            android:background="@color/transparent"
            android:id="@+id/edt_search_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="搜索职位/公司"
            android:lines="1"
            android:maxLines="1"
            android:textSize="@dimen/font_size_16" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_search"
            />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dip"
        android:text="新建目录"
        android:textColor="@color/white"
         />

</RelativeLayout>