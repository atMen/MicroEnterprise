<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_height="@dimen/margin_100"
        android:background="@drawable/bg_lawservice_background"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lawservice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:padding="@dimen/margin_5"
            android:textColor="@color/word_0000"
            android:textSize="@dimen/font_size_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1px"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/line_d2d2" />

        <TextView
            android:id="@+id/tv_lawservice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="2"
            android:padding="@dimen/margin_5"
            android:textColor="@color/word_9999"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_lawservice_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_20"
        android:scaleType="fitXY"
        android:src="@mipmap/img_hot" />
</RelativeLayout>

