<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_tax_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            android:textColor="@color/word_9999"
            android:textSize="@dimen/font_size_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/img_arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tailormade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_100"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/item_service_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_45"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="量身定制"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_24"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="做您身边的工商专家"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_45"
            android:scaleType="fitXY"
            android:scrollbars="none"
            android:src="@mipmap/img_service_pircure" />
    </LinearLayout>
</LinearLayout>
