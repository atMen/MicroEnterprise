<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/margin_100"
    android:paddingLeft="@dimen/margin_3"
    android:paddingRight="@dimen/margin_3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_100"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_talent_background"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_talent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginRight="@dimen/margin_3"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_talent_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginRight="@dimen/margin_3"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/tv_talent_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginRight="@dimen/margin_3"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/tv_talent_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginRight="@dimen/margin_3"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>
</RelativeLayout>
