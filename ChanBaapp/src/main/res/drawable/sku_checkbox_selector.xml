<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_15" />
            <!-- 填充的颜色 -->
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/line_1px" android:color="@color/line_d2d2" />
            <padding android:bottom="@dimen/margin_5" android:left="@dimen/margin_15" android:right="@dimen/margin_15" android:top="@dimen/margin_5"  />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_15" />
            <solid android:color="@color/main_bg" />
            <stroke android:width="@dimen/line_1px" android:color="@color/line_d2d2" />
            <padding android:bottom="@dimen/margin_5" android:left="@dimen/margin_15" android:right="@dimen/margin_15" android:top="@dimen/margin_5" />
        </shape>
    </item>
</selector>