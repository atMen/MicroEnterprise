<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/selector_white_item"
        android:orientation="vertical"
        android:padding="@dimen/margin_5">

        <LinearLayout
            android:id="@+id/layout_takephoto"
            style="@style/item_selector_45"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:textColor="@color/word_9999"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1px"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/color_eeee" />

        <LinearLayout
            android:id="@+id/layout_chosephoto"
            style="@style/item_selector_45"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从相册中选择"
                android:textColor="@color/word_9999"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_takephoto_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_margin="@dimen/margin_10"
        android:background="@color/main_bg"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16" />
</LinearLayout>
