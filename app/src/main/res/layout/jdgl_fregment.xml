<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
 
    <TextView

        android:id="@+id/qyname"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="陕西省市场监督管理局脱贫攻坚工作"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <WebView
        android:visibility="gone"
        android:id="@+id/webView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dip" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dip"
        android:text="       2015年以来，陕西省市场监督管理局在省扶贫办的精心指导下，认真贯彻落实中央及省委、省政府脱贫攻坚工作指示精神和决策部署，认真履行“两联一包”驻蒲城县扶贫团牵头单位职责，通过督导检查、参观见学、召开联席会等形式，指导省级驻蒲城县扶贫团单位认真开展扶贫工作；带领省局机关、直属事业单位根据包联帮扶贫困村的实际情况，聚焦精准识别，突出产业扶贫，积极开展扶智扶志培训，组织机关干部做好联户扶贫工作，省局机关、直属事业单位包联帮扶的9个村，已有7个村完成了脱贫摘帽，共有829户2955人退出贫困，脱贫攻坚工作成绩显著；坚持立足市场监管职能，积极配合相关单位，推动社会扶贫工作，取得了一定的成效。"
        android:textSize="16sp"
        android:lineSpacingExtra="5dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/btnbg"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="领导机构" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/btnbg"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="工作制度" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/btnbg"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="扶贫团工作" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:background="@color/btnbg"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="包联帮扶工作"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/btnbg"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联户扶贫工作"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/btnbg"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="社会扶贫工作" />

    </LinearLayout>


</LinearLayout>